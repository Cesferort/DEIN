//Import package tanda
package tanda;

public class Ejercicio5 
{
	public static void main(String[] args) 
	{
		int Minutos;
		float Resultado;
		char Actividad;
		
		do
		{
			System.out.println("Introduce el estado, R para reposo y D para dormido:");
			Actividad = Consola.leeInt();
		}
		while ((Actividad != 'R') && (Actividad != 'D')); 
		
		do
		{
			System.out.println("Introduce el tiempo que ha permanecido en ese estado:");
			Minutos = Consola.leeInt();
		}
		while (Minutos >= 0); 
		
		if (Actividad == 'R')
		{
			Resultado = 1.66f * Minutos;
		}
		
		else
		{
			Resultado = 1.08f * Minutos;
		}
		
		System.out.println("Han sido quemadas " + Resultado + " calorías.");
	}
}

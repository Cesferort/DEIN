
public class CuadradoMagico 
{
	private int cuad[][];
	
	public CuadradoMagico(int n)
	{
		cuad=new int[n][n];
	}
	
	public void ver()
	{
		for(int i=0;i<cuad.length;i++)
		{
			for(int j=0;j<cuad[0].length;j++)
			{
				if(cuad[i][j]>=10)
					System.out.print(cuad[i][j]+"  ");
				else
					System.out.print(" "+cuad[i][j]+"  ");
			}
			System.out.println();
		}
		System.out.println();
	}
	
	public void cargarCuadMag()
	{
		int i=0,j=2,num=1;
		for(int numIntroducidos=0;numIntroducidos<cuad.length*cuad[0].length;numIntroducidos++,num++)
		{
			cuad[i][j]=num;
			i--;
			j++;
			
			if(i<0)
				i=cuad.length-1;
			ver();
			if(j>=cuad[0].length)
				j=0;
			ver();
			if(cuad[i][j]!=0)
				i++;
			ver();
		}
	}
	
	public static void main(String[] args) 
	{
		CuadradoMagico cuad = new CuadradoMagico(5);
		cuad.cargarCuadMag();
		cuad.ver();
	}
}